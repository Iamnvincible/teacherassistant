       ShowTitleBar="True" 
       ShowMaxRestoreButton="False"
       FontFamily="Microsoft Yahei UI"
       WindowStartupLocation="CenterScreen"
       GlowBrush="Black"
       BorderThickness="0"
       Title="重邮教师助手" Height="550" Width="400" ResizeMode="CanMinimize">
