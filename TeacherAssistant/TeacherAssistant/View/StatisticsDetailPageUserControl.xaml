<UserControl x:Class="TeacherAssistant.View.StatisticsDetailPageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:TeacherAssistant.Converter"
             xmlns:local="clr-namespace:TeacherAssistant.View"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             FontFamily="Microsoft Yahei"
             d:DesignHeight="590" d:DesignWidth="650">
    <UserControl.Resources>
        <converter:ListCountValueConverter x:Key="ListCountValueConverter"/>
        <converter:HeightValueConverter x:Key="HeightValueConverter"/>
        <converter:ArriveStateValueConverter x:Key="ArriveStateValueConverter"/>
        <converter:ClassesValueConverter x:Key="ClassesValueConverter"/>
        <Style x:Key="whitefont" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0">
            <TabControl Name="tab">
                <TabItem Header="课程">
                    <Label x:Name="label3">
                        <Grid Margin="0,20" Width="{Binding ActualWidth, ElementName=label3, Mode=OneWay}" Height="{Binding ActualHeight, Converter={StaticResource HeightValueConverter}, ElementName=label3, Mode=OneWay}" >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="#7cccfe" >
                                <TextBlock Text="{Binding DetailCourse.CourseName}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="1" Background="#2daeff" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="课程编号" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.CourseNum}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="2" Background="#7cccfe" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="时间" Style="{StaticResource whitefont}"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock  Text="{Binding DetailCourse.CourseDay}" Style="{StaticResource whitefont}"/>
                                    <TextBlock Text="{Binding DetailCourse.CourseTime}" Style="{StaticResource whitefont}"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="3" Background="#2daeff" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="周次" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.LastWeeks,Converter={StaticResource ListCountValueConverter}}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="4" Background="#7cccfe" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="教室" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.Classroom}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="5" Background="#2daeff" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="课程类别" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.ClassType}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="6" Background="#7cccfe" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="学生专业" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.Subject}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="7" Background="#2daeff" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="上课班级" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.StuClassNum,Converter={StaticResource ClassesValueConverter}}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="8" Background="#7cccfe" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="教学班号" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.StudentListUrl}" Style="{StaticResource whitefont}"/>
                            </Grid>
                            <Grid Grid.Row="9" Background="#2daeff" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="人数" Style="{StaticResource whitefont}"/>
                                <TextBlock Grid.Column="1" Text="{Binding DetailCourse.CourseStuCount}" Style="{StaticResource whitefont}"/>
                            </Grid>
                        </Grid>
                    </Label>
                </TabItem>
                <TabItem Header="作业统计">
                    <Label x:Name="label2">
                        <Grid Width="{Binding ActualWidth, ElementName=label2, Mode=OneWay}">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"  Text="姓名"/>
                                <TextBlock Grid.Column="1"  Text="学号"/>
                                <TextBlock Grid.Column="2"  Text="班级"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="时间"/>
                                    <ComboBox Name="homeworktime" Width="50" Margin="10,0,0,0" Text="选择时间"></ComboBox>
                                </StackPanel>
                                <TextBlock Grid.Column="4" Text="平均分"/>
                            </Grid>
                            <ListView Grid.Row="1" >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"  Text="姓名"/>
                                            <TextBlock Grid.Column="1"  Text="学号"/>
                                            <TextBlock Grid.Column="2"  Text="班级"/>
                                            <StackPanel Grid.Column="3" Orientation="Horizontal">

                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>

                    </Label>
                </TabItem>
                <TabItem Header="考勤统计">
                    <Label x:Name="label" Background="Beige">
                        <Grid Width="{Binding ActualWidth, ElementName=label, Mode=OneWay}" Height="{Binding ActualHeight, Converter={StaticResource HeightValueConverter}, ElementName=label, Mode=OneWay}" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition />
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"  Text="姓名"/>
                                <TextBlock Grid.Column="1"  Text="学号"/>
                                <TextBlock Grid.Column="2"  Text="班级"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="时间"/>
                                    <ComboBox Name="arrive" Width="100" Margin="10,0,0,0" Text="选择时间" SelectionChanged="arrive_SelectionChanged"></ComboBox>
                                </StackPanel>
                            </Grid>
                            <ListView Grid.Row="1" Name="atten">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"  Text="{Binding StuName}" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"  Text="{Binding StuNum}" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="2"  Text="{Binding CourseNum}" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="3"  Text="{Binding ArriveState ,Converter={StaticResource ArriveStateValueConverter}}" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>

                    </Label>
                </TabItem>
                <TabItem Header="成绩总表">
                    <Label x:Name="label1">
                        <Grid Width="{Binding ActualWidth, ElementName=label1, Mode=OneWay}" >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"  Text="姓名"/>
                                <TextBlock Grid.Column="1"  Text="学号"/>
                                <TextBlock Grid.Column="2"  Text="班级"/>
                                <TextBlock Grid.Column="3"  Text="专业"/>
                                <TextBlock Grid.Column="4"  Text="考勤成绩"/>
                                <TextBlock Grid.Column="5"  Text="平时加分"/>
                                <TextBlock Grid.Column="6"  Text="作业平均分"/>
                                <TextBlock Grid.Column="7"  Text="考试成绩"/>
                                <TextBlock Grid.Column="8" Text="成绩"/>
                            </Grid>
                            <ListView Grid.Row="1">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"  Text="姓名"/>
                                            <TextBlock Grid.Column="1"  Text="学号"/>
                                            <TextBlock Grid.Column="2"  Text="班级"/>
                                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Label>
                </TabItem>
            </TabControl>
            <Button Content="返回课程列表" FontSize="14" Margin="0,5,0,0" Width="120" Height="30"   Click="Goback"  VerticalAlignment="Top" HorizontalAlignment="Right" Style="{DynamicResource SquareButtonStyle}"/>
        </Grid>
